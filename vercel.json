{
  "version": 2,
  "buildCommand": "pip install -r requirements.txt && cd frontend && npm run build",
  "outputDirectory": "frontend/.next",
  "installCommand": "pip install -r requirements.txt && cd frontend && npm install",
  "framework": "nextjs",
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ]
}